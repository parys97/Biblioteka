<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailsActivity">
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/coverDetails"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <TextView
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/coverDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/authorDetails"/>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/authorDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleDetails"/>
    <TextView
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:layout_below="@+id/titleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionDetails"/>
    <Button
        android:text="Wypozycz"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rentButton"/>


</RelativeLayout>